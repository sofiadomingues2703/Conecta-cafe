@model ConectaCafe.Models.Categoria
@{
    ViewData["Title"] = "Categoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-5">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 m-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalaze ps-3">Excluir</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">

                    <div class="col-12 mb-3">

                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" readonly />
                        </div>

                    </div>
                    <div class="mb-3">
                        <form asp-action="Delete">
                            <h5>Confirma a exclus√£o da categoria?</h5>
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Deletar" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-dark">Voltar</a>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
